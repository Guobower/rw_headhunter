<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- [START] - simple ============================================================================ -->
        <!-- form - simple -->
        <record id="job_view_form1" model="ir.ui.view">
            <field name="name">job_view_form1</field>
            <field name="model">rw_headhunter.job</field>
            <field name="arch" type="xml">
                <form string="Fast Create">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- action - simple -->
        <record id="job_action_view_form1" model="ir.actions.act_window">
            <field name="name">job_action_view_form1</field>
            <field name="res_model">rw_headhunter.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <!-- <field name="target">new</field> -->
        </record>
        <!-- [END] - simple ============================================================================== -->

        <!-- [START] - job ============================================================================ -->
        <!-- form -->
        <record id="job_view_form" model="ir.ui.view">
            <field name="name">job_view_form_inherit</field>
            <field name="model">rw_headhunter.job</field>
            <field name="inherit_id" ref="rw_headhunter.baseattribute_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="set_recruit" string="Launch Recruitment" states="open" type="object" class="oe_highlight"/>
                        <button name="set_open" string="Stop Recruitment" states="recruit" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="recruit,open"/>
                    </header>
                </xpath>
                <xpath expr="//notebook" position="before">
                    <separator/>
                    <group string="Information">
                    </group>
                    <separator/>
                </xpath>
            </field>
        </record>
        <!-- tree -->
        <record id="job_view_tree" model="ir.ui.view">
            <field name="name">job_view_tree_inherit</field>
            <field name="model">rw_headhunter.job</field>
            <field name="arch" type="xml">
                <tree string="job">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>
        <!-- kanban -->
        <record id="job_view_kanban" model="ir.ui.view">
            <field name="name">job_view_kanban</field>
            <field name="model">rw_headhunter.job</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_hr_recruitment_kanban" on_create="rw_headhunter.job_action_view_form1"><!-- create simple -->
                    <field name="name"/>
                    <field name="color"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary"><t t-esc="record.name.value"/></div>
                                        <div t-if="record.state.raw_value == 'recruit'" class="o_secondary o_job_alias">
                                            <small> <i class="fa fa-envelope-o"></i> <field name="name"/> </small>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <t t-if="record.state.raw_value == 'recruit'">
                                        <div class="row">
                                            <div class="col-xs-6 o_kanban_primary_left">
                                                <button class="btn btn-primary" name="%(rw_headhunter.job_match_action_view_tree)d" type="action">Application(s)</button>
                                            </div>
                                            <div class="col-xs-6 o_kanban_primary_right">
                                                <div class="row" name="recruitment">
                                                    <div class="col-xs-12">
                                                        <a t-if="record.state.raw_value == 'recruit'" name="set_open" type="object">Recruitment Done</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-if="record.state.raw_value == 'open'">
                                        <div class="row">
                                            <div class="col-xs-12 o_kanban_primary_left">
                                                <button class="btn btn-primary" name="set_recruit" type="object">Start Recruitment</button>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                                <div class="container o_kanban_card_manage_pane o_invisible">
                                    <div t-if="widget.editable" class="o_kanban_card_manage_settings row">
                                        <div class="col-xs-8">
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <a type="edit">Settings</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action -->
        <record id="job_action_view_tree" model="ir.actions.act_window">
            <field name="name">job_action_view_tree</field>
            <field name="res_model">rw_headhunter.job</field>
            <field name="domain">[('state', '=', 'recruit')]</field>
            <field name="view_ids"
                   eval="[(0, 0, {'view_mode': 'kanban', 'view_id': ref('job_view_kanban')}),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('job_view_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('job_view_form')})
                          ]"/>
        </record>
        <!-- menu-categories-list -->
        <menuitem id="menu_list_job" name="job list" parent="menu_122"
                  action="job_action_view_tree"/>
        <!-- [END] - job ============================================================================== -->
  </data>
</odoo>